<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="card_personmal_friend_detail_more">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">85dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@null</item>

        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">#a8a8a8</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">12.0dip</item>
    </style>



    <style name="card_personmal_friend_detail_more_btn">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
